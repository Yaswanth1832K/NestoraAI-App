rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ================= HELPER FUNCTIONS =================
    // Get user role from users collection
    function getUserRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }
    
    // Check if user is an owner
    function isOwner() {
      return request.auth != null && getUserRole() == "owner";
    }
    
    // Check if user is a participant in a chat
    function isParticipant(chatId) {
      return request.auth != null &&
        request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants;
    }

    // ================= USERS =================
    match /users/{userId} {
      // Anyone authenticated can read user profiles
      allow read: if request.auth != null;
      // Users can only write to their own document
      allow write: if request.auth != null && request.auth.uid == userId;

      // User's favorites subcollection (legacy support)
      match /favorites/{listingId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // ================= LISTINGS =================
    match /listings/{listingId} {
      // Anyone can read listings (public)
      allow read: if true;
      
      // ONLY OWNERS CAN CREATE, UPDATE, DELETE LISTINGS
      allow create, update, delete: if isOwner();

      // Reviews subcollection under listings
      match /reviews/{reviewId} {
        allow read: if true;
        allow create: if request.auth != null;
        allow update, delete: if request.auth != null &&
                              resource != null &&
                              request.auth.uid == resource.data.reviewerId;
      }
    }

    // ================= FAVORITES COLLECTION (ROOT) =================
    match /favorites/{favoriteId} {
      // Create: User can only create favorites for themselves
      allow create: if request.auth != null && 
                    request.resource.data.userId == request.auth.uid;
      
      // Read: User can only read their own favorites
      allow read: if request.auth != null && 
                  resource.data.userId == request.auth.uid;
      
      // Delete: User can only delete their own favorites
      allow delete: if request.auth != null && 
                    resource.data.userId == request.auth.uid;
    }

    // ================= CHATS =================
    match /chats/{chatRoomId} {
      // Allow reading/updating if you are a participant
      allow read, update: if request.auth != null && 
                            request.auth.uid in resource.data.participants;
      
      // Allow creation if you are a participant in the new room
      allow create: if request.auth != null && 
                     request.auth.uid in request.resource.data.participants;

      // Messages subcollection
      match /messages/{messageId} {
        // Read/Write if participant in the parent chatRoom
        allow read, write: if request.auth != null && 
                             request.auth.uid in get(/databases/$(database)/documents/chats/$(chatRoomId)).data.participants;
      }
    }

    // ================= VISIT REQUESTS =================
    match /visit_requests/{requestId} {
      // Only the tenant can create a visit request
      allow create: if request.auth != null &&
                    request.resource.data.tenantId == request.auth.uid;

      // Both tenant and owner can read the request
      allow read: if request.auth != null &&
        (
          resource != null &&
          (
            resource.data.tenantId == request.auth.uid ||
            resource.data.ownerId == request.auth.uid
          )
        );

      // Both tenant and owner can update (status changes, cancellations)
      allow update: if request.auth != null &&
        (
          resource != null &&
          (
            resource.data.tenantId == request.auth.uid ||
            resource.data.ownerId == request.auth.uid
          )
        );
      
      // Only creator can delete
      allow delete: if request.auth != null &&
                    resource != null &&
                    resource.data.tenantId == request.auth.uid;
    }

    // ================= GLOBAL REVIEWS COLLECTION =================
    match /reviews/{reviewId} {
      // Anyone can read reviews
      allow read: if true;
      
      // Any authenticated user can create a review
      allow create: if request.auth != null;
      
      // Only the reviewer can update/delete their review
      allow update, delete: if request.auth != null &&
                            resource != null &&
                            request.auth.uid == resource.data.reviewerId;
    }

    // ================= BOOKINGS =================
    match /bookings/{bookingId} {
      // Anyone authenticated can create
      allow create: if request.auth != null;

      // Both renter and owner can read (using participants array for query compatibility)
      allow read: if request.auth != null && 
                    request.auth.uid in resource.data.participants;

      // Only the owner can update status
      allow update: if request.auth != null && 
                    request.auth.uid == resource.data.ownerId;
    }
  }
}
